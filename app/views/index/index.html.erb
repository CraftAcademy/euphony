
  <div class="euphony">
    <h1>Euphony!</h1>
    <p>a music theme generator</p>
  </div>

<div class="mood">
  <p>How are you feeling today?</p>
  <button type="button" class="btn btn-secondary">Happy</button>
  <button type="button" class="btn btn-secondary">Mellow</button>
  <button type="button" class="btn btn-secondary">Sad</button>
</div>

<div class="song">
  <%= form_with url: search_path do |form| %>
    <%= form.label :query, 'Enter a song you like to listen to when you feel this way:' %>
    <%= form.text_field :query %>
    <%= form.submit value: 'Search' %>
  <% end %>
</div>


<% if @recommendations %>
  <% @recommendations.tracks.each do |track| %>
    <iframe src="https://open.spotify.com/embed/track/<%= track.id %>" width="300" height="380" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
  <% end %>
<% end %>
